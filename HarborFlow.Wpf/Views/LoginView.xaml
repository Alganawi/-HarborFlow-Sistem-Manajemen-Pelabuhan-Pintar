<Window x:Class="HarborFlow.Wpf.Views.LoginView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HarborFlow.Wpf.Views"
        xmlns:converters="clr-namespace:HarborFlow.Wpf.Converters"
        mc:Ignorable="d"
        Title="HarborFlow - Login"
        Height="540"
        Width="960"
        WindowStartupLocation="CenterScreen">
    <Window.Background>
        <DynamicResource ResourceKey="SidebarBackgroundBrush"/>
    </Window.Background>
    <Window.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </Window.Resources>
    <Grid>
        <Border Background="#F0FFFFFF" 
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                CornerRadius="12"
                Padding="40"
                Width="400">
            <Border.Effect>
                <DropShadowEffect Color="Black" Direction="270" ShadowDepth="10" BlurRadius="20" Opacity="0.3"/>
            </Border.Effect>
            <StackPanel>
                <TextBlock Text="HarborFlow" 
                           FontSize="32"
                           FontWeight="Bold"
                           Foreground="#FF052767"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10"/>
                
                <TextBlock Text="Login" 
                           FontSize="20"
                           FontWeight="SemiBold"
                           Foreground="#FF555555"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,30"/>

                <TextBlock Text="Username" Margin="0,0,0,5" FontWeight="SemiBold" Foreground="#FF333333"/>
                <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" 
                         Margin="0,0,0,15" 
                         Height="35"
                         Padding="5"
                         VerticalContentAlignment="Center"
                         BorderBrush="#FFCCCCCC"
                         BorderThickness="1"/>
                
                <TextBlock Text="Password" Margin="0,0,0,5" FontWeight="SemiBold" Foreground="#FF333333"/>
                <PasswordBox x:Name="PasswordBox" 
                             Margin="0,0,0,20" 
                             Height="35" 
                             Padding="5"
                             VerticalContentAlignment="Center"
                             BorderBrush="#FFCCCCCC"
                             BorderThickness="1"
                             PasswordChanged="PasswordBox_PasswordChanged"/>
                
                <TextBlock Text="{Binding ErrorMessage}" 
                           Foreground="#FFD32F2F" 
                           Visibility="{Binding IsErrorVisible, Converter={StaticResource BoolToVis}}"
                           Margin="0,0,0,10"
                           TextWrapping="Wrap"
                           HorizontalAlignment="Center"/>

                <Button Content="Login" 
                        Command="{Binding LoginCommand}" 
                        Margin="0,10,0,0" 
                        Height="40" 
                        Style="{StaticResource PrimaryButtonStyle}"
                        FontSize="16"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,25,0,0">
                    <TextBlock Text="Don't have an account? " VerticalAlignment="Center" Foreground="#FF555555"/>
                    <Button Content="Register"
                            Command="{Binding OpenRegisterWindowCommand}"
                            Style="{StaticResource HyperlinkButtonStyle}"
                            Foreground="#FF052767"
                            FontWeight="SemiBold"/>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>
