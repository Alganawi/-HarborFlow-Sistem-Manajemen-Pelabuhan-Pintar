<Window x:Class="HarborFlow.Wpf.Views.RegisterView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HarborFlow.Wpf.Views"
        xmlns:converters="clr-namespace:HarborFlow.Wpf.Converters"
        mc:Ignorable="d"
        Title="HarborFlow - Register"
        Height="720"
        Width="960"
        WindowStartupLocation="CenterScreen">
    <Window.Background>
        <ImageBrush ImageSource="/Assets/Images/AuthorizationBackground.jpg" Stretch="UniformToFill"/>
    </Window.Background>
    <Window.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </Window.Resources>
    <Grid>
        <Border Background="#D8FFFFFF" 
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                CornerRadius="10"
                Padding="40"
                MaxWidth="450">
            <Border.Effect>
                <DropShadowEffect Color="#FFBBBBBB" Direction="320" ShadowDepth="5" BlurRadius="10" Opacity="0.5"/>
            </Border.Effect>
            <StackPanel>
                <TextBlock Text="Create Account" 
                           FontSize="28"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,25"/>

                <TextBlock Text="Username" Margin="0,0,0,5" FontWeight="SemiBold"/>
                <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,15" Height="30"/>

                <TextBlock Text="Password" Margin="0,0,0,5" FontWeight="SemiBold"/>
                <PasswordBox x:Name="PasswordBox" Margin="0,0,0,15" Height="30" PasswordChanged="PasswordBox_PasswordChanged"/>

                <TextBlock Text="Confirm Password" Margin="0,0,0,5" FontWeight="SemiBold"/>
                <PasswordBox x:Name="ConfirmPasswordBox" Margin="0,0,0,15" Height="30" PasswordChanged="ConfirmPasswordBox_PasswordChanged"/>

                <TextBlock Text="Email" Margin="0,0,0,5" FontWeight="SemiBold"/>
                <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,15" Height="30"/>

                <TextBlock Text="Full Name" Margin="0,0,0,5" FontWeight="SemiBold"/>
                <TextBox Text="{Binding FullName, UpdateSourceTrigger=PropertyChanged}" Margin="0,0,0,20" Height="30"/>

                <Button Content="Register" 
                        Command="{Binding RegisterCommand}" 
                        Margin="0,10,0,0" 
                        Height="40" 
                        FontWeight="Bold"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                    <TextBlock Text="Already have an account? " VerticalAlignment="Center"/>
                    <Button Content="Login"
                            Command="{Binding OpenLoginWindowCommand}"
                            Style="{StaticResource HyperlinkButtonStyle}"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Loading Indicator -->
        <Grid Background="#80000000" Visibility="{Binding IsLoading, Converter={StaticResource BoolToVis}}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="Registering..." Foreground="White" FontSize="20"/>
                <ProgressBar IsIndeterminate="True" Width="200" Height="20" Margin="0,10,0,0"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
