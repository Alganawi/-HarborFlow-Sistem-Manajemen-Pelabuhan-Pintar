<Window x:Class="HarborFlow.Wpf.Views.RegisterView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HarborFlow.Wpf.Views"
        xmlns:converters="clr-namespace:HarborFlow.Wpf.Converters"
        mc:Ignorable="d"
        Title="HarborFlow - Register"
        Height="720"
        Width="960"
        WindowStartupLocation="CenterScreen">
    <Window.Background>
        <DynamicResource ResourceKey="SidebarBackgroundBrush"/>
    </Window.Background>
    <Window.Resources>
        <converters:BooleanToVisibilityConverter x:Key="BoolToVis"/>
    </Window.Resources>
    <Grid>
        <Border Background="#F0FFFFFF" 
                VerticalAlignment="Center"
                HorizontalAlignment="Center"
                CornerRadius="12"
                Padding="40"
                Width="450">
            <Border.Effect>
                <DropShadowEffect Color="Black" Direction="270" ShadowDepth="10" BlurRadius="20" Opacity="0.3"/>
            </Border.Effect>
            <StackPanel>
                <TextBlock Text="HarborFlow" 
                           FontSize="32"
                           FontWeight="Bold"
                           Foreground="#FF052767"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,10"/>

                <TextBlock Text="Create Account" 
                           FontSize="20"
                           FontWeight="SemiBold"
                           Foreground="#FF555555"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,30"/>

                <TextBlock Text="Username" Margin="0,0,0,5" FontWeight="SemiBold" Foreground="#FF333333"/>
                <TextBox Text="{Binding Username, UpdateSourceTrigger=PropertyChanged}" 
                         Margin="0,0,0,15" 
                         Height="35"
                         Padding="5"
                         VerticalContentAlignment="Center"
                         BorderBrush="#FFCCCCCC"
                         BorderThickness="1"/>

                <TextBlock Text="Password" Margin="0,0,0,5" FontWeight="SemiBold" Foreground="#FF333333"/>
                <PasswordBox x:Name="PasswordBox" 
                             Margin="0,0,0,15" 
                             Height="35" 
                             Padding="5"
                             VerticalContentAlignment="Center"
                             BorderBrush="#FFCCCCCC"
                             BorderThickness="1"
                             PasswordChanged="PasswordBox_PasswordChanged"/>

                <TextBlock Text="Confirm Password" Margin="0,0,0,5" FontWeight="SemiBold" Foreground="#FF333333"/>
                <PasswordBox x:Name="ConfirmPasswordBox" 
                             Margin="0,0,0,15" 
                             Height="35" 
                             Padding="5"
                             VerticalContentAlignment="Center"
                             BorderBrush="#FFCCCCCC"
                             BorderThickness="1"
                             PasswordChanged="ConfirmPasswordBox_PasswordChanged"/>

                <TextBlock Text="Email" Margin="0,0,0,5" FontWeight="SemiBold" Foreground="#FF333333"/>
                <TextBox Text="{Binding Email, UpdateSourceTrigger=PropertyChanged}" 
                         Margin="0,0,0,15" 
                         Height="35"
                         Padding="5"
                         VerticalContentAlignment="Center"
                         BorderBrush="#FFCCCCCC"
                         BorderThickness="1"/>

                <TextBlock Text="Full Name" Margin="0,0,0,5" FontWeight="SemiBold" Foreground="#FF333333"/>
                <TextBox Text="{Binding FullName, UpdateSourceTrigger=PropertyChanged}" 
                         Margin="0,0,0,20" 
                         Height="35"
                         Padding="5"
                         VerticalContentAlignment="Center"
                         BorderBrush="#FFCCCCCC"
                         BorderThickness="1"/>

                <Button Content="Register" 
                        Command="{Binding RegisterCommand}" 
                        Margin="0,10,0,0" 
                        Height="40" 
                        Style="{StaticResource PrimaryButtonStyle}"
                        FontSize="16"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,25,0,0">
                    <TextBlock Text="Already have an account? " VerticalAlignment="Center" Foreground="#FF555555"/>
                    <Button Content="Login"
                            Command="{Binding OpenLoginWindowCommand}"
                            Style="{StaticResource HyperlinkButtonStyle}"
                            Foreground="#FF052767"
                            FontWeight="SemiBold"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Loading Indicator -->
        <Grid Background="#80000000" Visibility="{Binding IsLoading, Converter={StaticResource BoolToVis}}">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                <TextBlock Text="Registering..." Foreground="White" FontSize="20"/>
                <ProgressBar IsIndeterminate="True" Width="200" Height="20" Margin="0,10,0,0"/>
            </StackPanel>
        </Grid>
    </Grid>
</Window>
